#include "crow.h"
#include <sqlite3.h>
#include <iostream>
#include <string>
#include <sstream>

sqlite3* db;

// Helper function to execute SQL statements
bool execute_sql(const std::string& sql) {
    char* errMsg = nullptr;
    if (sqlite3_exec(db, sql.c_str(), nullptr, nullptr, &errMsg) != SQLITE_OK) {
        std::cerr << "SQL error: " << errMsg << std::endl;
        sqlite3_free(errMsg);
        return false;
    }
    return true;
}

int main() {
    crow::SimpleApp app;

    // Open SQLite database
    if (sqlite3_open("hospital.db", &db)) {
        std::cerr << "Can't open database: " << sqlite3_errmsg(db) << std::endl;
        return 1;
    }

    // Create tables if they do not exist
    execute_sql("CREATE TABLE IF NOT EXISTS doctors (id INTEGER PRIMARY KEY AUTOINCREMENT, name TEXT, specialty TEXT);");
    execute_sql("CREATE TABLE IF NOT EXISTS patients (id INTEGER PRIMARY KEY AUTOINCREMENT, name TEXT, doctor_id INTEGER, FOREIGN KEY(doctor_id) REFERENCES doctors(id));");

    // Route: List doctors
    CROW_ROUTE(app, "/")
    ([](){
        return readFile("web/index.html");
    });
    CROW_ROUTE(app, "/doctors")
    ([]() {
        sqlite3_stmt* stmt;
        std::stringstream ss;
        ss << "[";
        if (sqlite3_prepare_v2(db, "SELECT id, name, specialty FROM doctors;", -1, &stmt, nullptr) == SQLITE_OK) {
            bool first = true;
            while (sqlite3_step(stmt) == SQLITE_ROW) {
                if (!first) ss << ",";
                ss << "{";
                ss << "\"id\":" << sqlite3_column_int(stmt, 0) << ",";
                ss << "\"name\":\"" << sqlite3_column_text(stmt, 1) << "\",";
                ss << "\"specialty\":\"" << sqlite3_column_text(stmt, 2) << "\"";
                ss << "}";
                first = false;
            }
        }
        sqlite3_finalize(stmt);
        ss << "]";
        return ss.str();
    });

    // Route: Add doctor (POST with JSON)
    CROW_ROUTE(app, "/doctor/add").methods("POST"_method)
    ([](const crow::request& req) {
        auto body = crow::json::load(req.body);
        if (!body) return crow::response(400, "Invalid JSON");

        std::string name = body["name"].s();
        std::string specialty = body["specialty"].s();

        std::string sql = "INSERT INTO doctors (name, specialty) VALUES ('" + name + "','" + specialty + "');";
        if (execute_sql(sql)) {
            return crow::response(200, "Doctor added successfully");
        } else {
            return crow::response(500, "Failed to add doctor");
        }
    });

    // Route: List patients
    CROW_ROUTE(app, "/patients")
    ([]() {
        sqlite3_stmt* stmt;
        std::stringstream ss;
        ss << "[";
        if (sqlite3_prepare_v2(db, "SELECT id, name, doctor_id FROM patients;", -1, &stmt, nullptr) == SQLITE_OK) {
            bool first = true;
            while (sqlite3_step(stmt) == SQLITE_ROW) {
                if (!first) ss << ",";
                ss << "{";
                ss << "\"id\":" << sqlite3_column_int(stmt, 0) << ",";
                ss << "\"name\":\"" << sqlite3_column_text(stmt, 1) << "\",";
                ss << "\"doctor_id\":" << sqlite3_column_int(stmt, 2);
                ss << "}";
                first = false;
            }
        }
        sqlite3_finalize(stmt);
        ss << "]";
        return ss.str();
    });

    // Route: Add patient
    CROW_ROUTE(app, "/patient/add").methods("POST"_method)
    ([](const crow::request& req) {
        auto body = crow::json::load(req.body);
        if (!body) return crow::response(400, "Invalid JSON");

        std::string name = body["name"].s();
        int doctor_id = body["doctor_id"].i();

        std::string sql = "INSERT INTO patients (name, doctor_id) VALUES ('" + name + "'," + std::to_string(doctor_id) + ");";
        if (execute_sql(sql)) {
            return crow::response(200, "Patient added successfully");
        } else {
            return crow::response(500, "Failed to add patient");
        }
    });

    // Start Crow app on port 8080
    app.port(8080).multithreaded().run();

    sqlite3_close(db);
    return 0;
}
